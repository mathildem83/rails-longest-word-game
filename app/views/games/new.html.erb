<div class="d-flex justify-content-between">
<% @letters.each do |letter| %>
  <p class="bg-primary bg-opacity-25 shadow-sm p-2"><%= letter %></p>
<% end %>
</div>

<div class=" d-flex flex-column align-items-center">
  <p class="mt-5">What is the longest word you can find?<p>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" placeholder="Type your longest word" class="border rounded shadow-sm">
    <input type="submit" value="Play" class="btn btn-primary">
  </form>
</div>
